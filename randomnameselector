<body>
<div class="generator-section">
  <h2>Random Name Selector</h2>
  <label for="randomNameList">Enter names (separate by commas or new lines):</label>
  <textarea id="randomNameList" rows="5" placeholder="Alice, Bob, Charlie"></textarea>
  <button onclick="selectRandomName()">Select Random Name</button>
  <div class="result" id="selectedName"></div>
</div>

<script>
function selectRandomName() {
  let names = document.getElementById('randomNameList').value
                .split(/[\n,]+/)
                .map(n => n.trim())
                .filter(n => n);
  if(names.length === 0) { 
    alert('Please enter some names.'); 
    return; 
  }
  let selected = names[Math.floor(Math.random() * names.length)];
  document.getElementById('selectedName').textContent = `Selected Name: ${selected}`;
}
</script>
</body>
