<style>
  body { font-family: 'Roboto', sans-serif; background: #f8f9fa; padding: 20px; color: #333; }
  .generator { max-width: 300px; margin: auto; background: #fff; padding: 20px; border-radius: 8px; 
               box-shadow: 0 2px 6px rgba(0,0,0,0.1); text-align: center; }
  label, input, button { display: block; width: 100%; margin-bottom: 15px; padding: 10px; border-radius: 4px; border: 1px solid #ccc; }
  button { background: #dc3545; color: #fff; border: none; cursor: pointer; }
  button:hover { background: #c82333; }
  .result { font-size: 2em; font-weight: bold; margin-top: 15px; }
</style>
