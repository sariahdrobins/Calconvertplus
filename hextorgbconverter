<body>
<div class="converter">
  <h2>Hex to RGB Converter</h2>
  <input type="text" id="hexInput" placeholder="#ffffff or ffffff" maxlength="7" />
  <button onclick="convertHexToRGB()">Convert</button>
  <div class="result" id="rgbResult"></div>
</div>

<script>
function convertHexToRGB() {
  let hex = document.getElementById('hexInput').value.trim();
  if(hex.startsWith('#')) { hex = hex.slice(1); }
  if(hex.length !== 3 && hex.length !== 6) {
    alert('Please enter a valid hex code.');
    return;
  }
  if(hex.length === 3) { 
    hex = hex.split('').map(char => char + char).join(''); 
  }
  const bigint = parseInt(hex, 16);
  const r = (bigint >> 16) & 255;
  const g = (bigint >> 8) & 255;
  const b = bigint & 255;
  document.getElementById('rgbResult').textContent = `RGB: (${r}, ${g}, ${b})`;
}
</script>
</body>
</html>
