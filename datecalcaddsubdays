<html lang="en">
<head>
<meta charset="UTF-8" />
<title>Date Calculator</title>
<style>
  body { font-family: 'Roboto', sans-serif; background: #f7f9fa; padding: 20px; color: #333; }
  .calculator { max-width: 400px; margin: auto; background: #fff; padding: 20px; border-radius: 8px; 
                box-shadow: 0 2px 6px rgba(0,0,0,0.1); }
  label, input, select, button { display: block; width: 100%; margin-bottom: 15px; }
  input, select, button { padding: 10px; border-radius: 4px; border: 1px solid #ccc; }
  button { background: #17a2b8; color: #fff; border: none; cursor: pointer; }
  button:hover { background: #117a8b; }
  .result { font-weight: bold; margin-top: 15px; }
</style>
</head>
<body>
<div class="calculator">
  <h2>Date Calculator</h2>
  <label for="baseDate">Base Date:</label>
  <input type="date" id="baseDate" />

  <label for="offset">Offset Value:</label>
  <input type="number" id="offset" placeholder="Enter number" />

  <label for="unit">Unit:</label>
  <select id="unit">
    <option value="days">Days</option>
    <option value="months">Months</option>
    <option value="years">Years</option>
  </select>

  <label for="operation">Operation:</label>
  <select id="operation">
    <option value="add">Add</option>
    <option value="subtract">Subtract</option>
  </select>

  <button onclick="calculateNewDate()">Calculate New Date</button>
  <div class="result" id="newDateResult"></div>
</div>

<script>
function calculateNewDate() {
  const baseDateInput = document.getElementById('baseDate').value;
  const offset = parseInt(document.getElementById('offset').value);
  const unit = document.getElementById('unit').value;
  const operation = document.getElementById('operation').value;

  if(!baseDateInput || isNaN(offset)) {
    alert('Please fill in all fields correctly.');
    return;
  }

  let baseDate = new Date(baseDateInput);
  let multiplier = (operation === 'add') ? 1 : -1;

  if(unit === 'days') {
    baseDate.setDate(baseDate.getDate() + multiplier * offset);
  } else if(unit === 'months') {
    baseDate.setMonth(baseDate.getMonth() + multiplier * offset);
  } else if(unit === 'years') {
    baseDate.setFullYear(baseDate.getFullYear() + multiplier * offset);
  }

  document.getElementById('newDateResult').textContent = `Resulting Date: ${baseDate.toDateString()}`;
}
</script>
</body>
</html>
