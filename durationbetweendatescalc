<body>
<div class="calculator">
  <h2>Duration Between Two Dates</h2>
  <label for="startDate">Start Date:</label>
  <input type="date" id="startDate" />

  <label for="endDate">End Date:</label>
  <input type="date" id="endDate" />

  <button onclick="calculateDuration()">Calculate Duration</button>
  <div class="result" id="durationResult"></div>
</div>

<script>
function calculateDuration() {
  const start = new Date(document.getElementById('startDate').value);
  const end = new Date(document.getElementById('endDate').value);
  if(isNaN(start) || isNaN(end) || end < start) {
    alert('Please enter valid start and end dates with end date after start date.');
    return;
  }
  const diff = end - start;
  const days = Math.floor(diff / (1000 * 60 * 60 * 24));
  document.getElementById('durationResult').textContent = 
    `Duration: ${days} days.`;
}
</script>
</body>
