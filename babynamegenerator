<body>
<div class="generator">
  <h2>Baby Name Generator</h2>
  <select id="gender">
    <option value="unisex">Unisex</option>
    <option value="male">Male</option>
    <option value="female">Female</option>
  </select>
  <button onclick="generateName()">Generate Name</button>
  <div class="result" id="babyNameResult"></div>
</div>

<script>
function generateName() {
  const gender = document.getElementById('gender').value;
  const maleNames = ['Liam', 'Noah', 'Oliver', 'Elijah', 'James'];
  const femaleNames = ['Olivia', 'Emma', 'Ava', 'Sophia', 'Isabella'];
  const unisexNames = ['Alex', 'Jordan', 'Taylor', 'Casey', 'Riley'];

  let names;
  if(gender === 'male') names = maleNames;
  else if(gender === 'female') names = femaleNames;
  else names = unisexNames;

  const randomIndex = Math.floor(Math.random() * names.length);
  document.getElementById('babyNameResult').textContent = `Suggested Name: ${names[randomIndex]}`;
}
</script>
</body>
